{
  "name": "craps-simulator",
  "version": "1.0.0",
  "description": "A comprehensive craps simulator with CLI interface, modular architecture, and extensive betting options",
  "main": "src/game.js",
  "type": "module",
  "scripts": {
    "start": "node cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/ cli/",
    "dev": "node --watch cli/index.js"
  },
  "bin": {
    "craps": "./cli/index.js"
  },
  "keywords": [
    "craps",
    "casino",
    "dice",
    "gambling",
    "simulator",
    "cli",
    "game"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "cli-table3": "^0.6.3",
    "figlet": "^1.7.0",
    "cli-spinners": "^2.9.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}